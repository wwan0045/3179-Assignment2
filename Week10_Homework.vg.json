{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "title": { "text": "Global Tourism by Expenditure, 1995 - 2019" },
   
    "data": {
       "url": "https://raw.githubusercontent.com/wwan0045/3179-HomeworkWk9/main/Global%20Tourism%20-%20Expenditure.csv"
       },
       "params": [
           {
           "name": "region_selection",
           "bind": {
               "input": "select",
               "options": [null,"Americas","Europe","Africa","Asia","Oceania"],
               "labels":[
                   "Show All",
                   "Americas",
                   "Europe",
                   "Africa",
                   "Asia",
                   "Oceania"
                   ],
               "name": "Region Selection: "
               }
           }
       ],
   
       
       "transform": [
           {"filter": "region_selection == null || datum.Region == region_selection"}
       ],
       
       
       "selection": {
               "region_highlight": {
                   "type": "multi",
                   "fields": ["Region"],
                   "bind": "legend"
                   }
               },
       "mark" : {
        "type": "line",
        "point": {
          "filled": false,
          "fill": "white"
       }},
       "encoding":{
                
           "x":{
               "field": "Year",
               "type":"nominal",
               "title":"Year"           
           },
           "y":{
               "aggregate":"sum",
               "field":"Expenditure",
               "title":"Tourism Expenditure (USD)",
               "type": "quantitative",
               "axis":{"tickCount":7},
               "scale": {"domain":[0,500000000000]}
           },
           
           
           "color": {
               "field": "Region",
               "type": "nominal",
               "scale": {
                   "domain": [
                       "Americas",
                       "Europe",
                       "Africa",
                       "Asia",
                       "Oceania"
                       ],
                   "range": [
                       "#808080",
                       "#984ea3",
                       "#808080",
                       "#ff7f00 ",
                       "#808080"
                       ]                
               }
           },
           "opacity": {
               "condition": {"selection": "region_highlight", "value": 0.8},
               "value": 0.1
           },       
           "tooltip": [
               {"field": "Region", "type": "nominal"},
               {"field": "Year", "type": "quantitative"},
               {
               "field": "sum_Expenditure",
               "type": "quantitative",
               "format": ".2f"
               } 
           ]
           
       }
      
          
   }
       
